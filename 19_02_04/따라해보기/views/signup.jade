doctype html
html
    head
        meta(charset="utf-8")
        title Sign up
    body
        div(style="text-align:center; text-shadow:1px 1px #7048e8")
            h1 Sign up

        form(action="/signup" method="post" style="text-align:center; margin-top:5%")
            p
                h3(style="margin-top:-2%") ID
                input(type="text" name="id" placeholder="ID" style="text-align:center" maxlength=10)
            p(style="margin-top:3%")
                h3(style="margin-top:-1%") Password
                input(type="password" name="password" placeholder="Password" style="text-align:center" maxlength=10)
            p(style="margin-top:3%")
                h3(style="margin-top:-1%") Check Password
                input(type="password" name="c_password" placeholder="Check Password" style="text-align:center" maxlength=10)
            p(style="margin-top:5%")
                input(type="submit" value="Sign up" style="width:10%; background-color:black; color:white")

        a(href="/main" style="text-align:center") 
            h3 Back